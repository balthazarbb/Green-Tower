

<div class="container">
  <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
      <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
      <span class="fs-4"><img src="/images/greentower2.png" width="50%"></span>
    </a>

    <ul class="nav nav-pills">

      <li class="nav-item"><a href="/profile" class="nav-link nav-item">Profile</a></li>
      <li class="nav-item"><a href="/logout" class="nav-link nav-item">Logout</a></li>
    </ul>
  </header>
</div>
<div class="tower">    
  <h1>choose your plants</h1>
</div>
<section class="tower-col">
{{#each plants}}

<div class="card mb-3" style="max-width: 540px;">
   <div class="row g-0">
      <div class="col-md-4">
        <img src="/{{this.img}}" class="plants-img">
      </div>
        <div class="col-md-8">
            <div class="card-body">
              <div  class="card-inner">
                <h4 class="card-title">{{this.plantname}}</h4>
                  <p class="card-text">{{this.description}} <br> Season: {{this.season}} <br> Time to harvest: about {{this.timeToHarvest}} days <br> Ph value: {{this.phValue}}  <br> Fertilizer type: {{this.plantType}}</p>
                    <div class="btn-group">
                      <form method="POST" action="/plants/{{../towerId}}/{{this._id}}"> 
                        {{#if this.isInTower}}
                         <button type="submit" class="profile-btns" align="right" disabled >ALREADY ADDED</button>
                         {{else}}
                        <button type="submit" class="profile-btns" align="right">ADD</button>
                        {{/if}}
                      </form>                      
                      <a href="/profile"><button type="submit" class="profile-btns" align="right">PROFILE</button></a>
        	          </div>
              </div>  
            </div>
        </div>
   </div>
</div>
{{/each}}
</section>

