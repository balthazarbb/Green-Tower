{{!-- FIRST TOWER CARD--}}
<section>
    {{!-- Put comments here as to how naming works --}}
{{#if naming}}
<form method="POST" action="/create-tower">
    <label>Towername</label>
    <input type="towername" name="towername" placeholder="name your tower"  >
    <button type="submit" name="create-tower">create</button>
</form>
    <div> 
        <img src="images/Tower.png" id="towerpic">
        <p>You planted no plants yet! <br>
        Add plants below</p>
    </div>
  {{/if}}    
<div>
    {{#each towers}}
    <h1>{{this.towername}}</h1>
        {{#each this.plantId}}
            {{#if showButton}}
                 <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                                <img src="..." alt="...">
                            </div>
                            <div class="col-md-8">
                            <div class="card-body">
                            
                        <a href="/plants/{{../this._id}}"><button style="background-color:#4169E1;", type="loginbtn" class="btn btn-primary" align="right">add plant</button></a>

                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                        <img src="{{this.img}}" style="width: 50px">
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{this.plantname}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}

    {{/each}}




</section>



