<div class="toRight">
<a href="/logout">
 <button style="background-color:#4169E1;", type="logoutbtn" align="right">Logout</button>
</a>
</div>


{{!-- Headline --}}
<div>
<h1>YOUR TOWERS</h1>
</div>
 <div>
  <a href="/create-new-tower"><button style="background-color:#4169E1;">create a new tower</button></a>
</div>

{{!-- FIRST TOWER CARD--}}
<section>
    {{!-- naming:  --}}
{{#if naming}}
<form method="POST" action="/create-tower">
    <label>Towername</label>
    <input type="towername" name="towername" placeholder="name your tower"  >
    <button type="submit" name="create-tower">create</button>
</form>
    <div> 
        <img src="images/Tower.png" id="towerpic">
        <p>You planted no plants yet! <br>
        Add plants below</p>
    </div>
  {{/if}}    
<div>
    {{#each towers}}
    <h1>{{this.towername}}</h1>
      <form  method="POST" action ="/delete-tower/{{this._id}}">
          <button style="background-color:#4169E1;", type="deletebtn" class="btn btn-primary" align="right">Delete tower</button>
      </form>
        {{#each this.plantId}}
            {{#if showButton}}
                 <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                   
                           
                            <div class="card-body">
                            
                        <a href="/plants/{{../this._id}}"><button style="background-color:#4169E1;", type="loginbtn" class="btn btn-primary">add plant</button></a>

                            </div>
                            
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                             <img src="{{this.img}}"  class="plants-img">
                        </div>
                        <div class="col-md-8" >
                            <div class="card-body">
                                 <div  class="card-inner">
                                           <h5 class="card-title">{{this.plantname}}</h5>
                                           <p >{{this.description}}</p>
                                                                                              
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}

    {{/each}}
</div>
</section>



